@model LiquidWorld.Data.Models.Drink   

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                @*<a asp-controller="Drink" asp-action="Details" asp-route-id="@Model.DrinkId">@Model.Name</a>*@
                @Html.ActionLink(@Model.Name, "Details", "Drink", new {@id = Model.DrinkId }, null)
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div>
            <a class="btn btn-primary" asp-controller="Order" onclick="location.href = '@Url.Action("Create", "ShoppingCartItems", new { @drink = Model.DrinkId})'">Add to Cart</a>
        </div>
    </div>
</div>