@model LiquidWorld.Data.Models.Drink

<div class="container marginTop">
    <div class="row">
        <div class="card">
            <div class="text-center view overlay hm-white-slight">
                <img src="@Model.ImageUrl" class="img-fluid" alt="">
                <a href="#">
                    <div class="mask waves-effect waves-light"></div>
                </a>
            </div>
            <div class="card-block">
                <!--Title-->
                <h4 class="card-title">@Model.Name</h4>
                <!--Text-->
                <p class="card-text">@Model.LongDescription.</p>
                <p class="btn btn-group pull-right">
                    <input type="button" class="btn btn-success" value="Back To List" onclick="location.href = '@Url.Action("Index")'"/>
                    <a class="btn btn-primary" asp-controller="Order" onclick="location.href = '@Url.Action("Create", "ShoppingCartItems", new { @drink = Model.DrinkId})'">Add to Cart</a>
                </p>
            </div>
        </div>
    </div>
</div>
